<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity3"
    tools:showIn="@layout/activity_main3">

    <Button
        android:id="@+id/finishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="finish3"
        android:text="@string/finish" />

    <Button
        android:id="@+id/showTheAppleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/apples" />

    <ImageButton
        android:id="@+id/imageOwlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onClickGoodMorning"
        android:src="@drawable/icon" />

    <EditText
        android:id="@+id/editTextOwlGoodMorning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/imageOwlButton"
        android:layout_alignStart="@id/imageOwlButton"
        android:layout_below="@+id/imageOwlButton"
        android:minWidth="60dp" />

    <TextView
        android:id="@+id/menuItemShowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/finishButton"
        android:layout_alignStart="@id/finishButton"
        android:layout_below="@+id/finishButton" />

    <TextView
        android:id="@+id/textViewShowApple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showTheAppleButton"
        android:layout_centerHorizontal="true"
        android:minHeight="30dp"
        android:minWidth="60dp" />

    <TextView
        android:id="@+id/rememberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuItemShowTextView"
        android:text="boba" />


</RelativeLayout>
